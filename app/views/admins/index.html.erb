<% title = Admin.model_name.human.capitalize.pluralize %>

<% provide :section, 'admin' %>
<% provide :title, title %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb shadow-sm">
    <%= render partial: 'application/breadcrumbs/control_panel' %>
    <%= render partial: 'application/breadcrumbs/admins', locals: { active: true } %>
  </ol>
</nav>

<div class="jumbotron align-items-center">
  <h2 class="d-flex align-items-center">
    <%= title %>

    <%= button_to new_admin_path, method: :get, class: "btn btn-compact btn-outline-primary btn-sm" do %>
      <span class="material-icons">person_add</span>
    <% end %>

  </h2>

  <div class="list-group list-group-flush">
    <% @admins.each do |admin| %>
      <div class="list-group-item list-group-item-action">
        <%= link_to admin.email, admin %>
      </div>
    <% end %>
  </div>
</div>
