<% title = Admin.model_name.human.capitalize.pluralize %>
<% provide :title, title %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb shadow-sm">
    <%= render partial: 'application/breadcrumbs/control_panel' %>
    <%= render partial: 'application/breadcrumbs/admins', locals: { active: true } %>
  </ol>
</nav>

<div class="jumbotron align-items-center">
  <h2><%= title %></h2>

  <table>
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <td><%= link_to I18n.t(:show), admin %></td>
        <td><%= link_to(I18n.t(:edit), edit_admin_path(admin)) if policy(admin).update? %></td>
        <td><%= link_to I18n.t(:destroy), admin, method: :delete, data: { confirm: I18n.t(:confirm) } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t(:new, scope: :admin), new_admin_path %>
  <%= link_to t(:sign_out), destroy_admin_session_path, method: :delete %>
</div>
