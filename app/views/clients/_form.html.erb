<%= form_with(model: client, local: true) do |form| %>
  <%= render partial: 'error_messages', locals: { resource: client } %>

  <div class="form-group floating-label">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: true %>
  </div>

  <div class="form-group">
    <%= form.label :color %>
    <%= form.color_field :color, class: "form-control" %>
  </div>

  <%= form.submit submit_label, class: "btn btn-primary" %>
<% end %>
