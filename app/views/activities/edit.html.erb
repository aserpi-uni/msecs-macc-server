<% title = t :editing, scope: :resource, resource: @activity.description %>

<% provide :section, 'project' %>
<% provide :title, title %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb shadow-sm">
    <%= render 'application/breadcrumbs/control_panel' %>
    <%= render 'application/breadcrumbs/projects', active: false %>
    <%= render 'application/breadcrumbs/resource', active: false, name: @project.project_name, resource: @project %>
    <%= render 'application/breadcrumbs/activities' %>
    <%= render 'application/breadcrumbs/update', active: true, name: @activity.description, resource: [@project, @activity] %>
  </ol>
</nav>

<div class="jumbotron align-items-center">
  <h2>
    <%= title %>
  </h2>

  <%= render 'form', activity: @activity, submit_label: t(:save) %>

  <div class="mt-4"></div>
  <%= render 'application/danger_zone', path: project_activity_path([@project, @activity]), resource: :project %>
</div>
