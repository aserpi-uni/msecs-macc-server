<% t_scope = %i[devise passwords] %>

<% provide :title, t(:change, scope: t_scope) %>

<div class="jumbotron">
  <h2>
    <%= t :change, scope: t_scope %>
  </h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group floating-label">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", placeholder: true %>
    </div>

    <div class="form-group floating-label">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: true %>
    </div>

    <%= f.submit t(:submit_edit, scope: t_scope), class: "btn btn-primary" %>
  <% end %>

  <div class="mt-3"></div>

  <%= render "devise/shared/links" %>
</div>
