<% t_scope = %i[devise passwords] %>

<% provide :title, t(:forgot?, scope: t_scope) %>

<div class="jumbotron">
  <h2>
    <%= t :forgot?, scope: t_scope %>
  </h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "error_messages", resource: resource %>

    <div class="form-group floating-label">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: true %>
    </div>

    <%= f.submit t(:submit_new, scope: t_scope), class: "btn btn-primary" %>
  <% end %>

  <div class="mt-3"></div>

  <%= render "devise/shared/links" %>
</div>
