<%= form_with(model: @project, local: true) do |form| %>
  <%= render partial: 'error_messages', locals: { resource: project } %>

  <div class="form-group floating-label">
    <%= form.label :project_name %>
    <%= form.text_field :project_name, class: "form-control", placeholder: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: true %>
  </div>

  <div class ="form_group">
    <%= form.label :workspace %>
    <%= form.collection_select :workspace_id, Workspace.all, :id, :name%>

  </div>
  <div class="form_group">
    <%= form.label :delivery %>
    <%= form.datetime_select :delivery_time, class: "form-control", placeholder: true %>
  </div>
  <div class = "form_group">
    <%= form.label :current_cost %>
    <%= form.number_field :current_cost, :step => "0.1"%>
  </div>
  <div class = "form_group">
    <%= form.label :currency %>
    <%= form.text_field :currency, :step => "0.1"%>
  </div>
  <div class = "form_group">
    <%= form.radio_button :status, 'undefined', :checked => true %>
    <%= label :status_undefined, 'Undefined' %>
    <%= form.radio_button :status, 'ongoing' %>
    <%= label :status_ongoing, 'Ongoing' %>
    <%= form.radio_button :status, 'finished' %>
    <%= label :status_finished, 'Finished' %>
  </div>

  <%= form.submit submit_label, class: "btn btn-primary" %>
<% end %>