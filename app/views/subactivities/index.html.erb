<p id="notice"><%= notice %></p>

<h1>Subactivities</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th>Activity</th>
      <th>Worker 1</th>
      <th>Worker 2</th>
      <th>Worker 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subactivities.each do |subactivity| %>
      <tr>
        <td><%= subactivity.description %></td>
        <td><%= subactivity.status %></td>
        <td><%= subactivity.activity_id %></td>
        <td><%= subactivity.worker_1_id %></td>
        <td><%= subactivity.worker_2_id %></td>
        <td><%= subactivity.worker_3_id %></td>
        <td><%= link_to 'Show', subactivity %></td>
        <td><%= link_to 'Edit', edit_subactivity_path(subactivity) %></td>
        <td><%= link_to 'Destroy', subactivity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

