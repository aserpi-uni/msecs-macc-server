<% title = Workspace.model_name.human.capitalize.pluralize %>

<% provide :section, 'workspace' %>
<% provide :title, title %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb shadow-sm">
    <%= render partial: 'application/breadcrumbs/control_panel' %>
    <%= render partial: 'application/breadcrumbs/workspaces', locals: { active: true } %>
  </ol>
</nav>

<div class="jumbotron align-items-center">
  <h2 class="d-flex align-items-center">
    <%= title %>

    <%= button_to new_workspace_path, method: :get, class: "btn btn-compact btn-outline-primary btn-sm" do %>
      <span class="material-icons">group_add</span>
    <% end %>

  </h2>

  <div class="list-group list-group-flush">
    <% @workspaces.each do |workspace| %>
      <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <span>
          <%= link_to workspace.name, workspace %>

          <br>

          <small>
            <%= workspace.description %>
          </small>
        </span>

        <span>
          <span class="badge badge-primary badge-pill">
            <%= workspace.clients.count %>
          </span>

          <span class="badge badge-primary badge-pill">
            <%= workspace.workers.count %>
          </span>
        </span>
      </div>
    <% end %>
  </div>
</div>
