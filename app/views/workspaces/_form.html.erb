<%= form_with(model: workspace, local: true) do |form| %>
  <%= render partial: 'error_messages', locals: { resource: workspace } %>

  <div class="form-group floating-label">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: true %>
  </div>

  <div class="form-check">
    <%= form.check_box :billable, class: "form-check-input" %>
    <%= form.label :billable, class: "form-check-label" %>
  </div>

  <%= form.submit submit_label, class: "btn btn-primary" %>
<% end %>


